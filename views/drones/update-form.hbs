<h2>Update the drone</h2>
<form method="POST" action="/drones/{{drone._id}}/edit">
  <div class="form-group">
    <label>Name</label>
    <input value="{{drone.name}}" name="name" type="text" class="form-control" aria-describedby="emailHelp">
  </div>
  <div class="form-group">
    <label>Propeller</label>
    <input  value="{{drone.propellers}}" name="propellers" type="text" class="form-control">
  </div>
  <div class="form-group">
    <label>Speed</label>
    <input  value="{{drone.maxSpeed}}" name="maxSpeed" type="text" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary">Update Drone</button>
</form>
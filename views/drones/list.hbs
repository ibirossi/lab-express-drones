<h2>Available drones</h2>
<div class="drones-list">
{{#each drones}}
<div class="drone-detail">
<div>Name: {{this.name}}</div>
<div>Propellers: {{this.propellers}}</div>
<div>Speed (Meters/sec): {{this.maxSpeed}}</div>

<a href="/drones/{{this._id}}/edit">
    <button type="submit">Update Drone Details</button>
</a>

<a href="/drones/{{this._id}}/delete">
    <button type="submit">Delete Drone</button>
</a>
</div>
{{/each}}
</div>